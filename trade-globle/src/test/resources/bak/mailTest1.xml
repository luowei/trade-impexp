<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="LOGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>false</append>
        <File>log/loandb.log</File>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %5p [ %F:%L ] - %m%n</pattern>
        </layout>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <FileNamePattern>loandb%i.log</FileNamePattern>
            <maxIndex>50</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>1024KB</MaxFileSize>
        </triggeringPolicy>
    </appender>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %5p - %m%n</pattern>
        </layout>
    </appender>
    <appender name="SMTP" class="ch.qos.logback.classic.net.SMTPAppender">
        <From>no_reply_errors@aruld.org</From>
        <Subject>loandb - Error Log</Subject>
        <To>luowei010101@gmail.com</To>
        <SMTPHost>localhost</SMTPHost>
        <Threshold>ERROR</Threshold>
        <layout class="ch.qos.logback.classic.html.HTMLLayout">
            <pattern>%d %5p [ %F:%L ] - %m%n</pattern>
        </layout>
    </appender>
    <!-- 
    <logger name="org.springframework.orm">
        <level value="INFO"/>
    </logger>
    <logger name="org.springframework.transaction">
        <level value="INFO"/>
    </logger>
    <logger name="org.hibernate.cache">
        <level value="INFO"/>
    </logger>
    <logger name="org.hibernate.type">
        <level value="INFO"/>
    </logger>
    <logger name="org.apache">
        <level value="INFO"/>
    </logger>
    <logger name="org.hibernate.SQL">
        <level value="INFO"/>
    </logger>
    <logger name="org.hibernate">
        <level value="INFO"/>
    </logger>
    <logger name="org.loandb">
        <level value="WARN"/>
    </logger>
     -->
    <root>
        <level value="WARN"/>
        <appender-ref ref="LOGFILE"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="SMTP"/>
    </root>
</configuration>